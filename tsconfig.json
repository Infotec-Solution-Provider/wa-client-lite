{
	"compilerOptions": {
		"noImplicitAny": false,
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"incremental": true,
		"strictBindCallApply": true,
		"sourceMap": true,
		"strictNullChecks": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"target": "es2021",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		]
	},
	"include": [
		"src"
	]
}